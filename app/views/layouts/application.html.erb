<!DOCTYPE html>
<html>
  <head>
    <title>TheOasis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link href="carousel.css" rel="stylesheet">
  </head>
   <body>
    <head>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
          <a class="navbar-brand" href="/">Oasis</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
    <% if !session.has_key?(:client_id) %>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a href="/auth/google_oauth2" class="btn btn-block btn-google"><i class="fab fa-google"></i></a>
            </li>
          </ul>
      </nav>
      
    <% else %>
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <ul class="navbar-nav">
          <li class="nav-item">
						<a class="nav-link" <%= link_to "Appointments", appointments_path %></a>
					</li>
          <li class="nav-item">
						<a class="nav-link" <%= link_to "Treatments", treatments_path %></a>
					</li>
          <li class="nav-item">
						<a class="nav-link" <%= link_to "New Appointment", new_appointment_path %></a>
					</li>
          <li class="nav-item">
						<a class="nav-link" <%= link_to "Reviews", reviews_path %></a>
					</li>
          <li class="nav-item">
            <a class="nav-link"<%= link_to('Logout', logout_path, method: :delete) %></a>
          </li>
        </ul>
      </nav>
    <% end %>
    </head>

    <br><br><br>

        <%= content_tag :div, class:"col-lg-5 col-xl-6" do %>
          <%= render 'layouts/flash_message' %>
        <% end %>

    <%= yield %>

        <br><br>
   
        <%= content_tag :footer, class:footer_class do %>
          <%= render 'layouts/footer' %>
        <% end %>



 

  </body>
</html>
