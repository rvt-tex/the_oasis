<%= render partial: "layouts/errors", locals: {object: @client} %>

<div class="container mt-5">
    <div class="card bg-info">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Register</h4>
            <p class="text-center">Get started with your account</p>
        
    
            <%= form_for :client do %>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="client_first_name" name="client[first_name]" class="form-control" placeholder="First name" type="text">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="client_last_name" name="client[last_name]" class="form-control" placeholder="Last name" type="text">
            </div> 
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input id="client_email" name="client[email]" class="form-control" placeholder="Email address" type="email">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                </div>
                <select class="custom-select" style="max-width: 120px;">
                    <option selected="">+1</option>
                    <option value="1">+876</option>
                </select>
                <input id="client_phone" name="client[phone]" class="form-control" placeholder="Phone number" type="number">
            </div> 
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input id="client_password" name="client[password]"class="form-control" placeholder="Create password" type="password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Register Account  </button>
            </div>    
            <p class="text-center">Have an account? <%= link_to "Login", login_path %></p>                                                                 
            <% end %>
        </article>
    </div> 
</div>